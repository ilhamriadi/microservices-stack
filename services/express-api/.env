# Application Configuration
NODE_ENV=production
APP_NAME="Express API Service"
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=express_api
DB_USER=microservices_user
DB_PASSWORD=your_strong_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_very_long_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://156.67.24.197
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# Email Configuration (Optional)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com

# Service URLs
AUTH_SERVICE_URL=http://laravel-auth:9000
CATALOG_SERVICE_URL=http://laravel-catalog:9000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Health Check
HEALTH_CHECK_ENABLED=true
